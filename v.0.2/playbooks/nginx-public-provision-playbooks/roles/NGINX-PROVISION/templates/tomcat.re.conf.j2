server  {

        listen  {{ nginx_http_port }};

        location /  {

                    proxy_set_header X-Forwarded-Host $host;
                    proxy_set_header X-Forwarded-Server $host;
                    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                    proxy_pass http://{{ node_ip }}:8080/;

                   }
        }

